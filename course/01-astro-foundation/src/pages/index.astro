---
import MainLayout from "../layouts/MainLayout.astro";

// Server Only
const name = "Cesar Villalobos Olmos";
const title = "Home Page";

const currentDate = new Date();
---

<MainLayout title={title}>
	<h1>{name}</h1>

	<p>Momento actual: {currentDate.toLocaleTimeString()}</p>
	<p id="current-time">Momento actual real:</p>

	<footer>AÃ±o: 2023</footer>

	<script>
		/* Los scripts que agregamos en los componentes de Astro solo se ejecutan en el cliente
		una vez que el componente es renderizado. */
		// Client Only

		const currentTimeParagraph = document.querySelector("#current-time") as HTMLParagraphElement;
		currentTimeParagraph.innerText = `Momento actual real: ${(new Date()).toLocaleTimeString()}`;
	</script>
</MainLayout>
