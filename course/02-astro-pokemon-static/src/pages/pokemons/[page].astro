---
// C贸digo Server Side Only - Momento de construcci贸n BUILD TIME
import type { GetStaticPaths } from 'astro';
import type { PokemonListResponse } from '../../interfaces/pokemon-list.response';
import MainLayout from '../../layouts/MainLayout.astro';
import PokemonCard from '../../components/pokemons/PokemonCard.astro';
import Title from '@/components/shared/Title.astro';

export const getStaticPaths = (async ({ paginate }) => {
  const resp = await fetch('https://pokeapi.co/api/v2/pokemon?limit=151');
  const { results } = (await resp.json()) as PokemonListResponse;

  /* La funci贸n paginate nos permite crear una paginaci贸n con los resultados 
  que nos regrese la petici贸n http */
  return paginate(results, { pageSize: 20 });
}) satisfies GetStaticPaths;

const title = 'Pok茅mon Static | Home';
const { page } = Astro.props;
console.log(' ~ page:', page);
---

<MainLayout title={title}>
  <Title>Listado de Pok茅mons</Title>

  <section
    aria-label="Listado de Pok茅mons"
    class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-5"
  >
    {page.data.map(({ name, url }) => <PokemonCard name={name} url={url} />)}
  </section>

  <section class="flex mt-10 gap-2 items-center">
    <!-- {
      page.url.prev && (
        <a class="btn" href={page.url.prev}>
          Anteriores
        </a>
      )
    } -->

    <a
      class:list={[
        'btn',
        {
          disabled: !page.url.prev,
        },
      ]}
      href={page.url.prev}
    >
      Anteriores
    </a>

    <a
      class:list={[
        'btn',
        {
          disabled: !page.url.next,
        },
      ]}
      href={page.url.next}
    >
      Siguientes
    </a>

    <div class="flex flex-1"></div>

    <span class="text-xl font-bold">P谩gina {page.currentPage}</span>
  </section>
</MainLayout>

<style>
  .btn {
    @apply bg-blue-500 p-2 text-white rounded-md;
  }

  .disabled {
    @apply bg-gray-600 text-gray-400;
  }
</style>
