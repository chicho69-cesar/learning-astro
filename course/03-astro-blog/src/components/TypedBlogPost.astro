---
import { Formatter } from '@/utils/formatter';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const frontmatter = post.data;
---

<div class="lg:flex">
  <!--
    Usamos un componente Image para cargar la imagen de nuestro post, con
    un ancho y alto de 500 px, calidad baja y lazy loading para mejorar 
    el rendimiento de nuestra pÃ¡gina.
  -->
  <Image
    class="object-cover w-full h-56 rounded-lg lg:w-64"
    src={frontmatter.image}
    alt={frontmatter.title}
    width={500}
    width={500}
    quality="low"
    loading="lazy"
    transition:name={`${post.slug}-image`}
  />

  <div class="flex flex-col justify-between py-6 lg:mx-6">
    <a
      href={`/posts/${post.slug}`}
      class="text-xl font-semibold hover:underline text-white"
    >
      {frontmatter.description}
    </a>

    <span class="text-sm text-gray-300">
      {Formatter.formatDate(frontmatter.date)}
    </span>
  </div>
</div>
